@using TravelWebAppInMVC.Models.Classes
@model List<Blog>

    @foreach (var item in Model)
    {
        <div class="right">
            <div class="bot-left">
                <img src="@item.BlogImage" style="width:250px; height:150px;" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.Date.ToString("dd.MM.yyyy")</span>
                <p>@item.Contents.Substring(0,5)</p>
                <p><a href="/Blog/BlogDetail/@item.ID"><span class="read">Devamını Oku>></span></a></p>
            </div>
        </div>
    }
